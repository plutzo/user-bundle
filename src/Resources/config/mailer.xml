<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />
        <service id="marlinc.user.mailer.noop" class="Marlinc\UserBundle\Mailer\NoopMailer" />
        <service id="Marlinc\UserBundle\Mailer\MailerInterface" alias="marlinc.user.mailer.noop" />
        <service id="marlinc.user.mailer.admin" class="Marlinc\UserBundle\Mailer\HtmlMailer">
            <argument type="service" id="mailer" />
            <argument type="service" id="router" />
            <argument type="service" id="twig" />
            <argument type="collection">
                <argument key="template" type="collection">
                    <argument key="resetting">@MarlincUser/Admin/Mails/resetting_request.html.twig</argument>
                </argument>
                <argument key="route" type="collection">
                    <argument key="resetting">marlinc_user_admin_resetting_reset</argument>
                </argument>
                <argument key="from_email" type="collection">
                    <argument key="resetting">noreply@marlinc.com</argument>
                </argument>
            </argument>
        </service>
    </services>
</container>
