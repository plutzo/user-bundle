<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="marlinc.user.google.authenticator" class="Google\Authenticator\GoogleAuthenticator" />
        <service id="marlinc.user.google.authenticator.provider" class="Marlinc\UserBundle\GoogleAuthenticator\Authenticator">
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="marlinc.user.google.authenticator"/>
            <argument type="service" id="security.authorization_checker"/>
            <argument>%sonata.user.google.authenticator.forced_for_role%</argument>
            <argument>%sonata.user.google.authenticator.ip_white_list%</argument>
        </service>
        <service id="marlinc.user.google.authenticator.interactive_login_listener" class="Marlinc\UserBundle\GoogleAuthenticator\InteractiveLoginListener">
            <tag name="kernel.event_listener" event="security.interactive_login" method="onSecurityInteractiveLogin"/>
            <argument type="service" id="marlinc.user.google.authenticator.provider"/>
        </service>
        <service id="marlinc.user.google.authenticator.request_listener" class="Marlinc\UserBundle\GoogleAuthenticator\RequestListener">
            <tag name="kernel.event_listener" event="kernel.request" method="onCoreRequest" priority="-1"/>
            <argument type="service" id="marlinc.user.google.authenticator.provider"/>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="sonata.templating"/>
        </service>
        <service id="marlinc.user.google.authenticator.success_handler" class="Marlinc\UserBundle\EventListener\TwoFactorLoginSuccessHandler" public="false">
            <argument type="service" id="sonata.templating"/>
            <argument type="service" id="marlinc.user.google.authenticator.provider"/>
            <argument type="service" id="Marlinc\UserBundle\Manager\UserManager"/>
        </service>
        <service id="marlinc.user.command.two_step_verification" class="Marlinc\UserBundle\Command\TwoStepVerificationCommand">
            <argument type="service" id="marlinc.user.google.authenticator.provider" />
            <argument type="service" id="Marlinc\UserBundle\Manager\UserManager" />
            <tag name="console.command" command="marlinc:user:two-step-verification" />
        </service>
    </services>
</container>
