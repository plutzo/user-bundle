<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter id="marlinc.user.class.user">Marlinc\UserBundle\Entity\User</parameter>
    </parameters>
    <services>
        <service id="Marlinc\UserBundle\Form\PersonFormType">
            <tag name="form.type" />
        </service>
        <service id="marlinc.user.registration.form.factory" class="Marlinc\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%marlinc.user.registration.form.name%</argument>
            <argument>%marlinc.registration.form.type%</argument>
            <argument>%marlinc.registration.form.validation_groups%</argument>
        </service>
        <service id="marlinc.user.registration.form.type" class="Marlinc\UserBundle\Form\Type\RegistrationFormType">
            <argument>%marlinc.user.class.user%</argument>
            <tag name="form.type" />
        </service>
        <service id="marlinc.user.resetting.form.factory" class="Marlinc\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%marlinc.user.resetting.form.name%</argument>
            <argument>%marlinc.user.resetting.form.type%</argument>
            <argument>%marlinc.user.resetting.form.validation_groups%</argument>
        </service>
        <service id="marlinc.user.resetting.form.type" class="Marlinc\UserBundle\Form\Type\ResettingFormType">
            <argument>%marlinc.user.model.user.class%</argument>
            <tag name="form.type" />
        </service>
        <service id="marlinc.user.profile.form.factory" class="Marlinc\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%marlinc.user.profile.form.name%</argument>
            <argument>%marlinc.user.profile.form.type%</argument>
            <argument>%marlinc.user.profile.form.validation_groups%</argument>
        </service>
        <service id="marlinc.user.profile.form.type" class="Marlinc\UserBundle\Form\Type\ProfileFormType">
            <argument>%marlinc.user.model.user.class%</argument>
            <tag name="form.type" />
        </service>
        <service id="marlinc.user.change_password.form.factory" class="Marlinc\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%marlinc.user.change_password.form.name%</argument>
            <argument>%marlinc.user.change_password.form.type%</argument>
            <argument>%marlinc.user.change_password.form.validation_groups%</argument>
        </service>
        <service id="marlinc.user.change_password.form.type" class="Marlinc\UserBundle\Form\Type\ChangePasswordFormType">
            <argument>%marlinc.user.model.user.class%</argument>
            <tag name="form.type" />
        </service>
    </services>
</container>