<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="marlinc.user.util.user_manipulator" class="Marlinc\UserBundle\Util\UserManipulator">
            <argument type="service" id="Marlinc\UserBundle\Manager\UserManager"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
        </service>
        <service id="marlinc.user.util.token_generator" class="Marlinc\UserBundle\Util\TokenGenerator" public="true" />
        <service id="Marlinc\UserBundle\Util\TokenGeneratorInterface" alias="marlinc.user.util.token_generator" public="false" />
        <service id="marlinc.user.util.password_updater" class="Marlinc\UserBundle\Util\PasswordUpdater" public="false">
            <argument type="service" id="security.encoder_factory" />
        </service>
        <service id="Marlinc\UserBundle\Util\PasswordUpdaterInterface" alias="marlinc.user.util.password_updater" public="false" />
        <service id="marlinc.user.util.canonical_fields_updater" class="Marlinc\UserBundle\Util\Canonicalizer" public="false" />
        <service id="Marlinc\UserBundle\Util\CanonicalizerInterface" alias="marlinc.user.util.canonical_fields_updater" public="false" />
        <service id="marlinc.user.mailer.noop" class="Marlinc\UserBundle\Mailer\NoopMailer" public="false" />
        <service id="Marlinc\UserBundle\Mailer\MailerInterface" alias="marlinc.user.mailer.noop" public="false" />
        <service id="Marlinc\UserBundle\Validator\UserInitializer" public="false">
            <argument type="service" id="Marlinc\UserBundle\Util\CanonicalizerInterface" />
            <tag name="validator.initializer" />
        </service>
    </services>
</container>
