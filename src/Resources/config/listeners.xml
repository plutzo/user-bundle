<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="marlinc.user.listener.flash" class="Marlinc\UserBundle\EventListener\FlashListener">
            <argument type="service" id="session" />
            <argument type="service" id="translator" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="marlinc.user.listener.authentication" class="Marlinc\UserBundle\EventListener\AuthenticationListener">
            <argument type="service" id="marlinc.security.user_checker" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="security.authentication.session_strategy" />
            <argument type="service" id="security.firewall.map" />
            <argument type="service" id="security.token_storage" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="marlinc.user.listener.resetting" class="Marlinc\UserBundle\EventListener\ResettingListener">
            <argument type="service" id="router" />
            <argument>%marlinc.user.resetting.token_ttl%</argument>
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="marlinc.user.listener.user" class="Marlinc\UserBundle\EventListener\UserListener" public="false">
            <argument type="service" id="marlinc.user.util.password_updater" />
            <argument type="service" id="marlinc.user.util.canonical_fields_updater" />
            <tag name="doctrine.event_subscriber" />
        </service>
        <service id="marlinc.user.listener.last_login" class="Marlinc\UserBundle\EventListener\LastLoginListener">
            <argument type="service" id="Marlinc\UserBundle\Manager\UserManager" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
