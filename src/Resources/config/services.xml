<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="user.export.user" class="Marlinc\UserBundle\Export\UserExport">
            <tag name="marlinc.exporter.format" alias="user" class="Marlinc\UserBundle\Entity\User"/>
        </service>
        <service id="marlinc.user.form.type.security_roles" class="Marlinc\UserBundle\Form\Type\SecurityRolesType" public="true">
            <argument type="service" id="Marlinc\UserBundle\Security\RolesBuilder\EditableRolesBuilder"/>
            <tag name="form.type" />
        </service>
        <service id="marlinc.user.form.roles_matrix_type" class="Marlinc\UserBundle\Form\Type\RolesMatrixType" public="true">
            <argument type="service" id="Marlinc\UserBundle\Security\RolesBuilder\MatrixRolesBuilder"/>
            <tag name="form.type"/>
        </service>
        <service id="marlinc.user.roles_matrix_extension" class="Marlinc\UserBundle\Twig\RolesMatrixExtension" public="false">
            <argument type="service" id="Marlinc\UserBundle\Security\RolesBuilder\MatrixRolesBuilder"/>
            <tag name="twig.extension"/>
        </service>
        <service id="marlinc.user.twig.global" class="Marlinc\UserBundle\Twig\GlobalVariables" public="false">
            <argument>%marlinc.user.impersonating%</argument>
            <argument>%marlinc.user.default_avatar%</argument>
            <argument type="service" id="marlinc.user.admin.user"/>
        </service>
        <service id="Marlinc\UserBundle\Admin\ExportFieldsExtension" public="true">
            <tag name="sonata.admin.extension" global="true" />
        </service>
        <service id="Marlinc\UserBundle\Admin\FormOptionsExtension" public="true">
            <tag name="sonata.admin.extension" global="true" />
        </service>
    </services>
</container>
